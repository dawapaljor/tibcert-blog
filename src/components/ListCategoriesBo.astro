---
import { getBoCategories } from '@/utils'
import Category from '@/components/Category'
const categories = await getBoCategories()

const { activeCategory } = Astro.props
---
<div class='relative flex flex-wrap min-w-full gap-5 px-5'>
	<Category />
	{
		categories.map((category: string) => (
			<Category name={category} activeCategory={activeCategory} />
		))
	}

	<div class='hidden sm:block absolute w-full bottom-0 border-b-2 border-[#EF482C] -z-40 dark:border-[#EF482C]'>
		<h2 class='text-lg font-medium tracking-wide text-end'>Latest Posts</h2>
	</div>

</div>
